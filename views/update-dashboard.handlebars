<body>
    <h1>Let Us Know a Little Bit More, {{userResults.first_name}}! </h1>
    <h2>Please Complete Your Profile Below</h2>
    <div class="card">
      <h3>Personal Info</h3>
      <form method="POST" action="/update-dashboard">
        <div class="personalInfo">
            <div>
            <label for="first_name">First Name</label>
            <input type="text" name="first_name" value="{{userResults.first_name}}">
            </div>
            <div>
                <label for="last_name">Last Name</label>
                <input type="text" name="last_name" value="{{userResults.last_name}}">
            </div>
            <div>
                <p>Username {{userResults.username}}</p>
            </div>
        </div>
        </form>

        <form method="POST" action="/update-dashboard">
        <div class="personalInfo">
            <div>
                <label for="age">Age</label>
                <input type="number" name="age" value="{{userResults.age}}" Years Old>
            </div>
            <div>
                <label for="weight">Weight</label>
                <input type="number" name="weight" value="{{userResults.weight}}" Pounds>
            </div> 
            <div>
                <label for="height">Height</label>
                <input type="number" name="height" value="{{userResults.height}}" Inches>
            </div>
        </div>
        </form>

        <form method="POST" action="/update-dashboard">
        <div class="personalInfo">
            <div>
                <label for="goal">Your Target Goal</label>
                <input type="number" name="goal" value="{{userResults.goal}}" Pounds>
            </div>
        <div class="form-group">
            <label for="activity_level">Activity Level:</label>
            <select class="form-control" id="activity_level" name="activity_level">
                <option value="not_active"> Not Active </option>
                <option value="moderately_active"> Moderately Active </option>
                <option value="very_active"> Very Active </option>
            </select>
        </div>
        </div>
        </form>
   
        <div class="caloriechart">
            {{!-- all of the chart information will go here  --}}
        </div>
        <div>
        <a href="/dashboard" class="btn">Save Changes</a>
    </div>
</body>