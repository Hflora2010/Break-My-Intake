
<div>
    <h2>Breakfast:</h2>
    <div class="dropdown">
        <input type="text" id="droptxt" class="list" readonly>
        <div id="content" class="content">
            {{#each foodResults as |foodResults| }}
            <div class="list">
                <input type="checkbox" id="{{foodResults.food_name}}" class="list" value="{{foodResults.food_name}}" />
                <label for="foodlist" class="list"> {{foodResults.food_name}} / {{foodResults.calories }}
                    {{foodResults.serving_size }}</label>
                <input type="hidden" class="list quantity" min="1" value="1" />
            </div>
            {{/each}}
        </div>
    </div>

